# Configuración específica para el directorio control
# Asegurar que todas las respuestas tengan las cabeceras CORS correctas
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "https://gedion.serviciosvirtuales.com.pe"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>

# Manejar solicitudes OPTIONS
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ index.php [QSA,L]
